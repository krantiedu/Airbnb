<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/responce_index.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>
  <body>
    <div class="nav">
        <div class="logo">
          <img src="https://1000logos.net/wp-content/uploads/2023/01/Airbnb-logo.png" alt="">

        </div>

        <div class="nav-mid">
          <a href="#">Anywhere</a>
          <a href="#">Anyweek</a>
          <a style="color: gray;" href="#">Add guests</a>
          <div class="nav-icon">
            <i style="cursor: pointer;" class="ri-search-line"></i>
          </div>
        </div>

        <div class="nav-last">
          <p>Airbab your home</p>
          <i style="font-size: 25px;"class="ri-global-line"></i>
          <div class="nav-last-last">
            <i style="cursor: pointer;"  class="ri-menu-line"></i>
            <div class="nav-pic">
              <img src="https://images.unsplash.com/photo-1677419424166-a65d8aec0d51?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHw5fHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=500&q=60" alt="">
            </div>
          </div>
        </div>
      </div>
      <div class="popup-login">
        <div class="top">
          <a id="popup-login"  style="color: black;" href="/">Home</a><br>
          <a id="popup-signup" href="#">sell property</a>
        </div>
        <hr>
        <div class="bottom">
          <a href="/records">Records</a><br>
          <a href="/custmers">your custmers</a><br>
          <a href="/logout">Logout</a>
        </div>

      </div>

      <div  class="signup">
        <div style="z-index: 100;" class="signup-page">
          <h1>Ptoperty Details</h1>
          <form action="/property" method="post">
            <input type="text" name="city" placeholder="city,contry" />
            <input type="text" name="address" placeholder="Address" />
            <input type="text" name="date" placeholder="Date" />
            <input type="text" name="price" placeholder="Price" />
            <input type="submit" value="Listed for selling" />
          </form>
          <i id="close-icon" class="ri-close-line"></i>
        </div>
      </div>


      <div class="container p-4">
        <h1>UPDATE YOUR PROFILE</h1>
        <form action="/updated/<%=user._id%>" method="post">
            
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">City</label>
              <input value="<%=user.city%>" name="city" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Address</label>
                <input value="<%=user.address%>" name="address" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Date</label>
                <input value="<%=user.date%>" name="date" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Price</label>
                <input value="<%=user.price%>" name="price" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
              </div>
            
           
            <button type="submit" class="btn btn-success">Update</button>
          </form>
      </div>

     



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  <script>
    function menu(){
      var menu = document.querySelector(".ri-menu-line");
      var flag = 0;
      menu.addEventListener("click",function(){
        
        var popup = document.querySelector(".popup-login");
        if(flag === 0){
          popup.style.display = "block";
          flag = 1;
        }
        else{
          popup.style.display = "none";
          flag = 0;
        }
       
        
      })
     }
    menu();

    function signup(){
      var signup = document.querySelector("#popup-signup");
      var icon = document.querySelector("#close-icon");
      signup.addEventListener("click",function(){
        
        var popup = document.querySelector(".signup-page");
        popup.style.display = "block";
        document.querySelector(".popup-login").style.display = "none";
        
       })
       icon.addEventListener("click",function(){
        
        var popup = document.querySelector(".signup-page");
        popup.style.display = "none";
        
       })
    }
    signup();
  </script>
</body>
</html>